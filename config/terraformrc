# Terraform CLI Configuration
# Place this file at ~/.terraformrc

# Plugin cache directory (saves bandwidth and speeds up init)
plugin_cache_dir = "$HOME/.terraform.d/plugin-cache"

# Disable checkpoint calls for version checks (speeds up CLI)
disable_checkpoint = true

# Disable crash reporting (privacy)
disable_checkpoint_signature = true

# Logging configuration for debugging
# Uncomment these when debugging Terraform issues
# export TF_LOG=INFO
# export TF_LOG_PATH="$HOME/.terraform.d/terraform.log"

# Credentials for Terraform Cloud/Enterprise (if used)
# credentials "app.terraform.io" {
#   token = "your-token-here"
# }

# Provider installation configuration
provider_installation {
  # Use plugin cache for all providers
  filesystem_mirror {
    path = "$HOME/.terraform.d/plugin-cache"
  }
  
  # Fall back to direct installation from registry
  direct {}
}

